#include<bits/stdc++.h>
#include<iostream>
using namespace std;
int main() {
    int n,a,b, suma=0, sumb=0, ans = 0;
    cout<<"Enter values of n,a and b\n";
    cin >> n >> a >> b;
    int A[n], B[n];
    vector<pair<int,int>> diffs;
    cout<<"Enter "<<n<<" values of array A\n";
    for (int i=0; i < n; i++) cin >> A[i]; 
    cout<<"Enter "<<n<<" values of array B\n";
    for (int i=0; i < n; i++) {
        cin >> B[i];
        diffs.push_back(make_pair(abs(A[i]-B[i]),i));
    }
    sort(diffs.begin(), diffs.end());
    int i,j;
    for (i=n-1,j=0; i >= 0 && j<a+b; i--,j++) {
        int index = diffs[i].second;
        if (A[index]>B[index]) {
            if (suma+1<=a) {
                suma++;
                ans += A[index];
            }
            else {
                sumb++;
                ans += B[index];
            }
        }
        else {
            if (sumb+1<=b) {
                sumb++;
                ans += B[index];
            }
            else {
                suma++;
                ans += A[index];
            }
        }
    }
    cout << ans << "\n";
    return 0;
}